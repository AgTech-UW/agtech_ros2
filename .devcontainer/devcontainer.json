{
  "name": "AgTech ROS 2 Humble",
  "image": "osrf/ros:humble-desktop-full",
  "privileged": true,
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-python.python",
        "ms-vscode.cpptools"
      ]
    }
  },
  "containerEnv": {
    "DISPLAY": "host.docker.internal:0" 
  },
  "runArgs": [
    "--network=host",
    "--cap-add=SYS_PTRACE",
    "--security-opt", "seccomp=unconfined"
  ],
  "postCreateCommand": "echo 'source /opt/ros/humble/setup.bash' >> ~/.bashrc"
}